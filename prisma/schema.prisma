generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model proyecto {
  id           Int                   @id @default(autoincrement())
  nombre       String
  tipo_energia String
  descripcion  String
  pasos        paso[]
  tecnologias  tecnologia_proyecto[]
  recursos     recurso[]
}

model paso {
  id          Int      @id @default(autoincrement())
  paso        String
  proyecto_id Int
  proyecto    proyecto @relation(fields: [proyecto_id], references: [id])
}

model tecnologia {
  id         Int                   @id @default(autoincrement())
  tecnologia String
  tipo       Boolean
  proyectos  tecnologia_proyecto[]
}

model tecnologia_proyecto {
  id            Int        @id @default(autoincrement())
  proyecto_id   Int
  proyecto      proyecto   @relation(fields: [proyecto_id], references: [id])
  tecnologia_id Int
  tecnologia    tecnologia @relation(fields: [tecnologia_id], references: [id])
}

model recurso {
  id          Int      @id @default(autoincrement())
  nombre      String
  valor       Decimal
  cantidad    Int
  proyecto_id Int
  proyecto    proyecto @relation(fields: [proyecto_id], references: [id])
}
